<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginTop="64dp"
        android:text="@string/my_history_app"
        android:textColor="#050505"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp" />

    <TextView
        android:id="@+id/EnterAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="@string/enter_age"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="34dp" />

    <EditText
        android:id="@+id/ageNumber"
        android:layout_width="188dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/EnterAge"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="159dp"
        android:layout_height="67dp"
        android:layout_marginTop="136dp"
        android:text="@string/generate_history"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/EnterAge"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="110dp"
        android:layout_height="63dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="132dp"
        android:text="@string/clear"
        app:layout_constraintStart_toEndOf="@+id/btnGenerate"
        app:layout_constraintTop_toBottomOf="@+id/ageNumber" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="241dp"
        android:layout_height="111dp"
        android:layout_marginTop="104dp"
        android:background="#EFE6E9"
        android:text="@string/showresult"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGenerate"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="78dp" />
</androidx.constraintlayout.widget.ConstraintLayout>